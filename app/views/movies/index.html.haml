-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", movies_path, {:method => :sort, :id=>"title_header",:sort_param => :title}
      %th Rating
      %th= link_to "Release Date", movies_path, {:method => :sort, :id=>"release_date_header", :sort_param => :title}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
