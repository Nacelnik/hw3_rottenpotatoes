-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", :checked => @checked_ratings.include?(rating) ? "yes" : nil
  = submit_tag 'Refresh', :id=> "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => @hilite == "title" ? "hilite" : nil}= link_to "Movie Title", movies_path({:sort_param => "title"}),  :id=>"title_header"
      %th Rating
      %th{:class => @hilite == "date" ?  "hilite" : nil}= link_to "Release Date", movies_path({ :sort_param => "date"}),  :id=>"release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
